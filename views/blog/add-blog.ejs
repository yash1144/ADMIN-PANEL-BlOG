<%- include('../header') -%>

    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
        <%- include('../navbar') -%>
            <div class="container-fluid py-4">
                <div class="row">
                    <div class="col-12">
                        <div class="card my-4">
                            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                                    <h6 class="text-white text-capitalize ps-3">Add New Blog</h6>
                                </div>
                            </div>
                            <div class="card-body px-0 pb-2">
                                <div class="table-responsive p-0">
                                    <div class="container">
                                        <form action="/blog/insertBlogData" method="post" enctype="multipart/form-data">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="input-group input-group-outline my-3">
                                                        <label class="form-label">Title</label>
                                                        <input type="text" name="title" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="input-group input-group-outline my-3">
                                                        <label class="form-label">Author</label>
                                                        <input type="text" name="authorName" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="input-group input-group-outline my-3">
                                                        <textarea name="content" class="form-control" rows="5"
                                                            placeholder="Blog Content"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="input-group input-group-outline my-3">
                                                        <select name="category" class="form-control">
                                                            <option value="">Select Category</option>
                                                            <% if(categories.length> 0) { %>
                                                                <% for(let cat of categories) { %>
                                                                    <option value="<%= cat.id %>">
                                                                        <%= cat.name %>
                                                                    </option>
                                                                    <% } %>
                                                                        <% } %>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="input-group input-group-outline my-3">
                                                        <input type="file" name="blogImage" class="form-control">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="text-center">
                                                <button type="submit"
                                                    class="btn bg-gradient-primary w-100 my-4 mb-2">Submit</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </main>

    <%- include('../footer') -%>